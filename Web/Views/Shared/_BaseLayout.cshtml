<!DOCTYPE html>
<html lang="en">
	<head>
		<title>@ViewBag.Title</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<!--Set the descritpion of you site-->
		<meta name="description" content="MyPlace - host dinners">
		<!--Set author of your site-->
		<meta name="author" content="Jacob Duval">
		<!--Modernizr-->
        <script src="~/Scripts/Bootstrap/modernizr.js"></script>
		<!--Main Bootstrap styling-->
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	    <!--Custom styling-->
        <link href="~/Content/main.css" rel="stylesheet" />
        <link href="~/Content/style.css" rel="stylesheet" />
		<!--Iconic font - FontAwesome-->
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css">
		<!--Google font-->
		<link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,700'>
		<!--Site thumbnail-->
		<!--Browser tab icon aka Favicon-->
		<!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
		<!--[if lt IE 9]>
			<script src="~/Scripts/Bootstrap/html5shiv.js"></script>
		<![endif]-->
	</head>
    <body data-spy="scroll" data-target=".navbar" data-offset='61'>
        <div id="preloader">
            <div id="status">&nbsp;</div>
        </div>
        @Html.Partial("_Header")
       
        @RenderBody()

        @Html.Partial("_Footer")  

        @Html.Partial("_PageScripts")

        @RenderSection("PageScripts", required: false)

    </body>
</html>