@model Web.Models.Dinner.ViewDinnerModel
@{
    ViewBag.Title = "Dinner";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<section id="intro" class="content no-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-10">
                <a href="/Profile?id=@Model.UserId"><h1>@Model.FirstName @Model.LastName</h1></a>
                <h5>Invites you to dinner on</h5>
                <h3>@Model.EventDate.ToString("dddd, MMMM d") at @Model.EventDate.ToShortTimeString()</h3>

            </div>
            <div class="col-sm-3 offset-top">
                <a href="/Profile?id=@Model.UserId"><img class="img-responsive" src="@Model.ProfileImageUrl" alt="Profile Image"></a>
            </div>
            <div class="col-sm-8 offset-top col-offset-1">
                <div class="row">
                    <div class="col-sm-11">
                        <h5>Starter</h5>
                        <p class="lead">@Model.Starter<br><br>
                    </div>
                    <div class="col-sm-11">
                        <h5>Main</h5>
                        <p class="lead">@Model.Main<br><br>
                    </div>
                    <div class="col-sm-11">
                        <h5>Dessert</h5>
                        <p class="lead">@Model.Dessert<br><br>
                    </div>
                    <div class="col-sm-11">
                        <h5>Information</h5>
                        <p class="lead">@Model.Description<br><br>
                    </div>
                    <div class="col-sm-12">
                        <!-- Will not display on one line unless formatted this way :S -->
                        <a class="btn btn-syndicate btn-large squared" id="apply" href="/Dinner/Apply/@Model.Id">I'd love to come</a><input id="partnerEmail" class="form-control-inline soft-hidden" placeholder="Enter your friends email"><a class="btn btn-info btn-large squared" id="togglePartner" href="#">+ 1</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
							
</section>

@section PageScripts
{
    <script type="text/javascript">
        $(function () {
            var togglePartner = $('#togglePartner');
            togglePartner.click(function () {
                togglePartner
                $('#partnerEmail').toggle('fast');
            });
        })
    </script>
}